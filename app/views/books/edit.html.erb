<body>
   <h1>Editing Book</h1>
   <% if @book.errors.any? %>
       <div class="error">
         <%= @book.errors.count %>errors prohibited this book from being saved:
         <% @book.errors.full_messages.each do |message| %>
         <ul>
             <li>
                 <%= message %>
             </li>
         </ul>
          <% end %>
    <% end %>
    </div>
   <%= form_with model:@book, local:true do |f| %>
     <div class="field">
       <label>Title</label><br>
       <%= f.text_field :title %>
     </div>
     <div class="field">
       <label>Body</label><br>
       <%= f.text_field :body %>
     </div>
     <div action="action">
       <%= f.submit 'Update Book' %>
       <% end %>
     </div>
</body>
